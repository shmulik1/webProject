<!DOCTYPE html>
<html lang="en" ng-app="scotchApp" >
<head>
	<title>S&Y  Flower Store</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.js"></script>
	<script src="script.js"></script>


	<style>
		/* Remove the navbar's default rounded borders and increase the bottom margin */
		.navbar {
			margin-bottom: 50px;
			border-radius: 0;
		}

		/* Remove the jumbotron's default bottom margin */
		.jumbotron {
			margin-bottom: 0;
		}

		/* Add a gray background color and some padding to the footer */
		footer {
			background-color: #f2f2f2;
			padding: 25px;
		}

		#logo_image {
			height: 50px;
			display: inline-block;
			margin-right: 15px;
			margin-left: -14px;
			width: 55px;
			margin-top: -15px;
		}

		.carousel-inner > .item > img,
		.carousel-inner > .item > a > img {
			width: 100%;
			margin: auto;
		}

		.carousel-inner > .item > div > h3,
		.carousel-inner > .item > div > p {
			color: black;
			font-weight: bold;

		}


		.submitButton {
			background: transparent;
			color: #4EA544;
			text-decoration: underline;
			border: none;
			font-size: 26px;
			padding: 0;
			margin-top: 5px;
		}

		.container > .row > .col-sm-4 > .panel:hover {
			box-shadow: 0 0 10px 9px rgba(0, 140, 186, 0.5);
		}
	</style>
</head>



<body ng-controller="main_Controller">


<!-- carousel -->			<!-- carousel -->			<!-- carousel -->			<!-- carousel -->			<!-- carousel -->			<!-- carousel -->
<div class="jumbotron">
	<div id="myCarousel" class="carousel slide" data-ride="carousel">
		<!-- Indicators -->
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
			<li data-target="#myCarousel" data-slide-to="3"></li>
		</ol>
		<!-- Wrapper for slides -->
		<div class="carousel-inner" role="listbox">
			<div class="item active">
				<img src="images/1.jpg" alt="images/1.jpg">
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src="images/2.jpg" alt="images/2.jpg">
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src="images/3.jpg" alt="images/3.jpg">
				<div class="carousel-caption">
				</div>
			</div>
			<div class="item">
				<img src="images/4.jpg" alt="images/4.jpg">
				<div class="carousel-caption">
				</div>
			</div>
		</div>

		<!-- Left and right controls -->
		<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
</div>



<!-- signUpModal -->		<!-- signUpModal -->		<!-- signUpModal -->		<!-- signUpModal -->		<!-- signUpModal -->		<!-- signUpModal -->
<div class="modal fade" id="signUpModal" role="dialog">
	<div class="modal-dialog">

		<!-- signUpModal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Sign Up</h4>
			</div>
			<div class="modal-body">
				<form class="signUpform" id="signUp" method="post" action="/signUp" onsubmit="return checkForm(this);">
					<div class="form-group">
						<div class="c1 fld username">
							<label class="col-sm-4 control-label" for="signUp_username">User Name:</label>
							<input class="col-sm-5" type="text" name="username" id="signUp_Username" value="">
							<label class="col-sm-3" for="space"> </label>
						</div>
					</div>
					<div class="form-group">
						<div class="c1 fld password1">
							<label class="col-sm-4 control-label" for="signUp_password">Password:</label>
							<input class="col-sm-5" type="password" name="password1" id="signUp_Password" value="">
							<label class="col-sm-3" for="space"> </label>
						</div>
					</div>
					<div class="form-group">
						<div class="c1 fld password2">
							<label class="col-sm-4 control-label" for="signUp_password2">Confirm Password:</label>
							<input class="col-sm-5" type="password" name="password2" id="signUp_password2" value="">
							<label class="col-sm-3" for="space"> </label>
						</div>
					</div>
					<!--div class="c1 rememberusername">
                        <input type="checkbox" name="rememberusername" id="rememberusername" value="1">
                        <label for="rememberusername">זכור שם משתמש/ת</label>
                    </div-->
					<div class="form-group">
						<div class="c1 btn">
							<input class="col-sm-10" type="submit" value="Register">
							<label class="col-sm-2" for="space"> </label>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>

	</div>
</div>



<!-- loginModal -->			<!-- loginModal -->			<!-- loginModal -->			<!-- loginModal -->			<!-- loginModal -->			<!-- loginModal -->
<div class="modal fade" id="loginModal" role="dialog" ng-controller = "logIn_Controller">
	<div class="modal-dialog">
		<!-- loginModal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Login</h4>
			</div>
			<div class="modal-body">
				<form class="loginform" id="login">
					<div class="form-group">
						<div class="c1 fld username">
							<label class="col-sm-4" for="login_username">User Name:</label>
							<input class="col-sm-5" type="text" name="username" id="login_username" placeholder="User Name">
							<label class="col-sm-3" for="space"> </label>
						</div>
					</div>
					<div class="form-group">
						<div class="c1 fld password">
							<label class="col-sm-4" for="login_password">Password:</label>
							<input class="col-sm-5" type="password" name="password" id="login_password" placeholder="Password">
							<label class="col-sm-3" for="space"> </label>
						</div>
					</div>
					<div class="form-group">
						<div class="c1 btn">
							<label class="col-sm-1" for="space"> </label>
							<input class="col-sm-9" type="submit" id="login_button" data-dismiss="modal" value="Sign-in">   <!--; ng-click ="logIn()" -->
							<label class="col-sm-2" for="space"> </label>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>

	</div>
</div>



<!-- logoutModal -->			<!-- logoutModal -->			<!-- logoutModal -->			<!-- logoutModal -->			<!-- logoutModal -->			<!-- logoutModal -->
<div class="modal fade" id="logoutModal" role="dialog" >
	<div class="modal-dialog">
		<!-- loginModal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Logout</h4>
			</div>
			<div class="modal-body">
				<div class="logoutcontainer" id="logout">
					<div class="container">
						<div class="question">
							<h2 class="col-sm-12">Are you sure you want to Logout?</h2>
						</div>
					</div>
					<div class="container">
						<button class="btn btn-danger btn-lg" type="submit" onclick="logout()" id="logout_button" data-dismiss="modal" style="position: absolute; right: 30px;">Yes</button>
						<button type="button" class="btn btn-success btn-lg" data-dismiss="modal" style="float: left;">No </button>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>

	</div>
</div>




<!-- navbar -->			<!-- navbar -->			<!-- navbar -->				<!-- navbar -->			<!-- navbar -->		<!-- navbar -->
<nav class="navbar navbar-inverse navbar-fixed-top">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<b class="navbar-brand"  >
				<img id="logo_image" src="images/logo.jpg" alt="S&Y Book Store"/>S&Y Flower Store</b>
		</div>
		<div class="collapse navbar-collapse" id="myNavbar" ng-controller = "navBar_Controller">
			<ul class="nav navbar-nav">
				<li class="active"><a data-toggle="tab" href="#about">About</a></li>
				<li><a data-toggle="tab" href="#branches">Branches</a></li>
				<li><a data-toggle="tab" href="#catalog">Catalog</a></li>
				<!--li><a data-toggle="tab" href="#about">Home</a></li-->
				<li><a data-toggle="tab" href="#contact">Contact</a></li>
				<%if (user !== 'Guest'){%>
				<li id='user_management_li'><a data-toggle="tab" href="#user_Management" >User Management</a></li>
				<%}%>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="active"><a id="welcomeLine" href="#" ><span></span> Welcome! <strong>
							<%if (user === 'Guest') { %>
							Guest
							<% } else{ %>
							<%= user %>
							<% } %>
						</strong></a>
				</li>
				<li><a id="Sign-Up-button" href="#" data-toggle="modal" data-target="#signUpModal" ><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
				<%if (user == 'Guest'){%>
				<li><a id="login-button" href="#" data-toggle="modal" data-target="#loginModal" ><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
				<%} else {%>
				<li><a id="logout-button" href="#" data-toggle="modal" data-target="#logoutModal" ><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
				<%}%>
				<li><a id="cart-button" href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>

			</ul>
		</div>
	</div>
</nav>




<!-- main -->			<!-- main -->			<!-- main -->				<!-- main -->			<!-- main -->		<!-- main -->
<div id="main">
	<div ng-view></div>
</div>


