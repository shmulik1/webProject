<script>
	function spam() {
		alert("You did a serious mistake!\nNow we will send you full of spam :)");
	}
</script>

<script>
	function logout() {
		document.cookie = 'userID=; expires=Thu, 01 Jan 1970 00:00:01 GMT;';
		window.location='/';
	}
</script>

<script>
	$(document).ready(function () {
		$("#login_button").click(function () {
			var username = $("#login_username").val();
			var password = $("#login_password").val();
			$.get("/login", {user:username, password:password}, function (data) {
				window.location="/";
			});
		});
	});
</script>




